    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0",
    "vite": "^5.0.0"
  }
}
